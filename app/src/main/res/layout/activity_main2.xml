<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#64A59F"
    tools:context=".MainActivity2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:backgroundTint="#83E116">

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="Android App Development"
                android:layout_gravity="center"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="15dp"
            android:id="@+id/card2"
            android:layout_gravity="center"
            android:backgroundTint="#34E382">
            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="Web Develop-ment"
                android:layout_gravity="center"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="15dp"
            android:id="@+id/card3"
            android:layout_gravity="center"
            android:backgroundTint="#FFEB3B">

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="Data Structure &amp; Algorith-ms"
                android:layout_gravity="center"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="15dp"
            android:id="@+id/card4"
            android:layout_gravity="center"
            android:backgroundTint="#13E132">
            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="Artificial Intelligence"
                android:layout_gravity="center"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="15dp"
            android:id="@+id/card5"
            android:layout_gravity="center"
            android:backgroundTint="#8BC34A">
            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="Blockchain"
                android:layout_gravity="center"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="15dp"
            android:id="@+id/card6"
            android:layout_gravity="center"
            android:backgroundTint="#A943BA">
            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="ML &amp; Deep Le-arning"
                android:layout_gravity="center"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Call Us"
        app:cornerRadius="0dp" />

</LinearLayout>